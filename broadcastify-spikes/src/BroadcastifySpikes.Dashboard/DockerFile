FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore BroadcastifySpikes.sln
RUN dotnet publish BroadcastifySpikes.Dashboard/BroadcastifySpikes.Dashboard.csproj -c Release -o /out

FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /out .
EXPOSE 8080
ENTRYPOINT ["dotnet", "BroadcastifySpikes.Dashboard.dll"]
