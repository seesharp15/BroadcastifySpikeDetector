# Postgres
POSTGRES_DB=broadcastify
POSTGRES_USER=broadcastify
POSTGRES_PASSWORD=broadcastify_local_pw

# App config (shared)
APP_ENV=local
LOG_LEVEL=Information
RETENTION_DAYS=14
CLEANUP_POLL_SECONDS=3600
REAPPEAR_DAYS=2


# Ingest
INGEST_POLL_SECONDS=300

# Detect
DETECT_POLL_SECONDS=120
LOOKBACK_DAYS=3
ROBUST_Z=3.5
RECOVERY_Z=1.0
MIN_SAMPLES=40
PERSIST_SAMPLES=3
GLOBAL_ROBUST_Z=3.0
GLOBAL_NEW_FEED_MIN_LISTENERS=80
GLOBAL_MIN_SAMPLES=300
GLOBAL_LOOKBACK_WINDOW=180

# Alert
ALERT_SUPPRESS_HOURS=8
